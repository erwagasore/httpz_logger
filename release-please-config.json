{
  "release-type": "simple",
  "package-name": "httpz-logger",
  "include-component-in-tag": false,
  "include-v-in-tag": true,
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "prerelease": false,
  "draft": false,
  "pull-request-title-pattern": "chore(main): release ${version}",
  "pull-request-header": "ðŸŽ‰ Release PR for version ${version}",
  "extra-files": [
    {
      "type": "generic",
      "path": "build.zig.zon",
      "glob": false,
      "jsonpath": "$.version",
      "regex": {
        "patterns": ["\\.version = \"([0-9]+\\.[0-9]+\\.[0-9]+)\""],
        "replace": ".version = \"${version}\""
      }
    }
  ]
}
